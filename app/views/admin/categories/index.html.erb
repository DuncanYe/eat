<h1>餐廳分類總表 [ <%= @categories.size %> ] 筆</h1>

<div>
  <%= link_to 'Restaurant', admin_restaurants_path %> |
  <%= link_to 'Categories', admin_categories_path %> 
</div>

<div class="form-inline" >
  <%= form_for [:admin, @category] do |f| %>
    <div class="form-group  mb-2">
      <%= f.text_field :name, placeholder: "Category Name",  class: "form-control" %>
      <%= f.submit class: "btn btn-primary mb-2" %>
    </div>
  <% end %>
</div>
<% if @category.errors.any? %>
  <%= @category.errors.full_messages.to_sentence  %>
<% end %>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>#</th>
          <th>Category name</th>
          <th>#</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
        <tr>
          <th><%= category.id %></th>
          <td><%= category.name %></td>
          <td>
            <%= link_to 'Edit', admin_categories_path(id: category.id) %> |
            <%= link_to 'delete', admin_category_path(category), method: :delete, data: {confirm: "確定刪除嗎？"} %>  
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>