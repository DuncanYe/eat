<ul class="nav nav-tabs">
  <li class="nav-item nav-link"><%= link_to '首頁', restaurants_path %></li>
  <li class="nav-item nav-link active"><%= link_to '最新動態', feeds_restaurants_path %></li>
</ul>
<br>
<div class="row">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">最新餐廳</div>
      <div class="card-body">
        <% @recent_restaurants.each do |restaurant| %>
          <h4><%= link_to restaurant.name, restaurant_path(restaurant) %></h4>
          <p><%= restaurant.category.name %></p>
          <p><%= restaurant.description %></p>
          <hr>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">最新留言</div>
      <div class="card-body">
        <% @recent_comments.each do |comment| %>
        <h4><%= link_to comment.restaurant.name, restaurant_path(comment.restaurant) %></h4>
        <p><%= comment.content %></p>
        <p>by <%= link_to comment.user.name, user_path(comment.user) %></p>
        <hr>
        <% end %>
      </div>
    </div>
  </div>
</div>