<% if restaurant.is_favorited?(current_user) %>
  <%= link_to "Unfavorite", unfavorite_restaurant_path(restaurant), method: :post, data: {"disable-with": "Waiting...."}, class: "btn btn-dark" %>
<% else %>
  <%= link_to "Favorite", favorite_restaurant_path(restaurant), method: :post, data: {"disable-with": "Waiting...."}, class: "btn btn-primary" %>
<% end %>