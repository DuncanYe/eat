<div class="row">
  <%= form_for @user do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :intro %>
      <%= f.text_area :intro, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :avatar %>
      <%= f.file_field :avatar, class: "form-control" %>
      <%= image_tag @user.avatar.url, width: "300" if @user.avatar?  %>
    </div>

    <div class="form-group">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to "Cencel", user_path(@user), class: "btn btn-dark" %>
    </div>
  <% end %>
</div>