<div class="row">
  <div class="col-md-5">
    <%= @user.avatar %>
  </div>
  <div class="col md-7">
    <%= form_for @user do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :intro %>
        <%= f.text_area :intro, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</div>