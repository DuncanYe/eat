<div class="container">
  <div class="col-md-6">
    <ul>
      <% @users.each do |user| %>
        <li>
          <%= link_to user.name, user_path(user) %>
          <% if current_user != user %>
            <%= link_to 'Follow', follow_user_path(user), method: :post, data: {"disable-with": "Waiting...."}, class: "btn btn-primary btn-sm" %>
            <%= link_to 'Follow', unfollow_user_path(user), method: :post, data: {"disable-with": "Waiting...."}, class: "btn btn-primary btn-sm" %>
          <% end %>
          </li>
          <br>
      <% end %>
    </ul>
  </div>
</div>