<div class="container">
  <div class="row">
    <div class="col-md-6">
      <ul>
        <% @users.each do |user| %>
          <li>
            <%= link_to user.name, user_path(user) %>
            <% if current_user != user %>
              <% if current_user.following?(user) %>
                <%= link_to 'Unfollow', unfollow_user_path(following_id: user), method: :post, data: {"disable-with": "Waiting...."}, class: "btn btn-danger btn-sm" %>
              <% else %>  
                <%= link_to 'Follow', follow_user_path(user), method: :post, data: {"disable-with": "Waiting...."}, class: "btn btn-primary btn-sm" %>
              <% end %>  
            <% end %>
            </li>
            <br>
        <% end %>
      </ul>
    </div>
    <div class="col-md-6">
      <ul>
        <% @users.each do |user| %>
          <li>
            <%= link_to user.name, user_path(user) %>
            <% if current_user != user %>
            
                <%= link_to 'Friend', friendships_path(friend_id: user), method: :post, data: {"disable-with": "Waiting...."}, class: "btn btn-primary btn-sm" %>
            <% end %>
            </li>
            <br>
        <% end %>
      </ul>
    </div>
  </div>
</div>